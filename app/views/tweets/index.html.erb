<h4>Listing tweets</h4><hr/>
<div style="margin-bottom:20px;"><%= link_to 'Fetch tweets', tweets_path(:AUTH_TOKEN => form_authenticity_token.inspect),:class=>'btn  btn-primary',:method=>:post %></div>
<table>
<% @gtweets.each do |keyword,tweets|%>
<tr><td style="text-align :center;background-color: #55ffff"> <strong>Keyword: <%=keyword.phrase%></strong></td></tr>
<tr><td>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th>ID</th>	
      <th>Author</th>
      <th>Message</th>  
      <th class="actions-cell">Posted at</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% tweets.each do |tweet| %>
      <tr>
      	<td><%= link_to tweet.twitter_uuid , "https://twitter.com/#{tweet.author}/status/#{tweet.twitter_uuid}"%></td>
        <td><%= tweet.author %></td>
        <td><%= tweet.message %></td>
   
        <td class="actions-cell"><%= tweet.posted_at %></td>
        <td class="actions-cell">
        	<%= link_to 'View', tweet,:class=>'btn btn-mini btn-info' %>
            <%= link_to 'Tweak', edit_tweet_path(tweet),:class=>'btn btn-mini btn-warning' %>
            <%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
</td></tr></table>
