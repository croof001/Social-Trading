<div id="filterrific_results">

	<div>
		<%= page_entries_info @tweets  %>
	</div>

	<table>
		<% @gtweets.each do |keyword,tweets|%>
		<tr>
			<td style="text-align :center;background-color: #55ffff"><strong>Keyword: <%= keyword.phrase%></strong></td>
		</tr>
		<tr>
			<td>
			<table class="table table-striped">
				<thead>
					<tr>

						<th>ID</th>
						<th>Author</th>
						<th>Message</th>
						<th class="actions-cell">Posted at</th>
						<th ></th>
					</tr>
				</thead>

				<tbody>
					<% tweets.each do |tweet| %>
					<tr style="color:<%=tweet.keyword.color%>">
						<td><%= link_to tweet.twitter_uuid , "https://twitter.com/#{tweet.author}/status/#{tweet.twitter_uuid}"%></td>
						<td><%= tweet.author %></td>
						<td><%= tweet.message %></td>

						<td class="actions-cell"><%= tweet.posted_at %></td>
						<td class="actions-cell"> <%= link_to 'View', tweet,:class=>'btn btn-mini btn-info' %>
						<%= link_to 'Follow', "#{follow_path}?tweeter=#{tweet.author}",:class=>'btn btn-mini btn-success' %>
						<%= link_to 'Retweet', retweet_path(:AUTH_TOKEN => form_authenticity_token.inspect,:tweet_id=>tweet.twitter_uuid),:class=>'btn  btn-mini btn-warning',:method=>:post %>
						<%#= link_to 'Tweak', edit_tweet_path(tweet),:class=>'btn btn-mini btn-warning' %>
						<%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-mini btn-danger' %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			 <%end%> 
			 </td>
		</tr>
	</table>

	<%= paginate @tweets  %>
