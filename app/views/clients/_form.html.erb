  <div class="control-group">
    <%= f.label :last_name, :class=>'control-label' %>
    <div class="controls">
    <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :company, :class=>'control-label' %>
    <div class="controls">
    <%= f.text_field :company %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class=>'control-label' %>
    <div class="controls">
    <%= f.text_area :address %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class=>'control-label' %>
    <div class="controls">
    <%= f.text_field :phone %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :alternate_phone, :class=>'control-label' %>
    <div class="controls">
    <%= f.text_field :alternate_phone %>
    </div>
  </div>

  <div class="control-group">
  	<div class="controls">
    <%= f.submit 'Update profile', :class=>'btn btn-warning' %>
    </div>
  </div>
